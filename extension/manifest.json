{
  "manifest_version": 3,
  "name": "Hame Bookmark",
  "description": "A smarter way to manage your bookmarks directly from your extension by ilhame.id",
  "version": "1.2.1",
  "author": "IlhameID",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "permissions": [
    "storage",
    "tabs",
    "downloads"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https: http:"
  }
}
